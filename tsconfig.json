// tsconfig.json
{
    "compilerOptions": {
        // Default
        "target": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        // Added
        "jsx": "react-jsx",
        "module": "ESNext",
        "declaration": true,
        "declarationDir": "dist",
        "sourceMap": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "emitDeclarationOnly": true,
        "rootDir": "src",
        "baseUrl": "./src"
    },
    "include": [
        "src"
    ]
}